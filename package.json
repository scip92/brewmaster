{
  "name": "brewmaster",
  "version": "1.0.0",
  "description": "Brew automation bot",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "server": "yarn workspace server watch",
    "client": "yarn workspace client start",
    "build:server": "yarn workspace server build && yarn workspace server webpack",
    "build:client": "yarn workspace client build",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Server,Client\" -c \"blue.bold,yellow.bold\" \"yarn run server\" \"yarn run client\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scip92/brewmaster.git"
  },
  "author": "scip92",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/node": "^14.0.13",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^4.2.0",
    "ts-node": "^8.10.2",
    "typeorm": "^0.2.25"
  }
}
